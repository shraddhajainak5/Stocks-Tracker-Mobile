<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" android:background="@color/white">

    <View
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="88dp"
        android:background="#CCD3D3D3" />

    <TextView
        android:id="@+id/progressstocktext"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Stocks"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"

        />

<ImageView
    android:id="@+id/iconimage"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/launcher_icon"
    android:layout_marginLeft="140dp"
    android:layout_marginTop="300dp"
    android:visibility="visible"/>

<ProgressBar
    android:id="@+id/progressbar"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_marginTop="300dp"
    android:layout_marginLeft="170dp"
    android:visibility="invisible" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp"
        android:title="Stocks"
        android:titleTextColor="@android:color/white"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/arrow_left"
            android:visibility="gone" />




        <TextView
            android:id="@+id/toolbarstocktext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="Stocks"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/searchbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="230dp"
            android:background="@color/white"
            android:src="@drawable/search" />


        <View
            android:id="@+id/toolbarshadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="57dp"
            android:background="#CCD3D3D3" />

    </androidx.appcompat.widget.Toolbar>

    <AutoCompleteTextView
        android:id="@+id/inputbar"
        android:layout_width="300dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="70dp"
        android:background="@android:drawable/editbox_background"
        android:drawablePadding="8dp"
        android:hint="Search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/clearbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="350dp"
        android:background="@color/white"
        android:src="@drawable/close"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#808080"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/portfoliotext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#808080"
        android:layout_marginTop="136dp"
        android:text="   PORTFOLIO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/networthtext"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="166dp"
        android:text="   Net Worth"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#808080"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/networthvalue"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="196dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#808080"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/cashtext"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="166dp"
        android:layout_marginLeft="266dp"
        android:text="Cash Balance"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#808080"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/cashvalue"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="196dp"
        android:layout_marginLeft="266dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#808080"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/portfoliosection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"/>

    <TextView
        android:id="@+id/favouritetext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#808080"
        android:layout_marginTop="0dp"
        android:text="   FAVORITES"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:visibility="invisible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favouritesection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        />

    <TextView
        android:id="@+id/finhublink"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="136dp"
        android:text="Powered by Finnhub"
        android:textSize="18sp"
        android:textStyle="italic"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#808080"
        android:visibility="invisible"/>



    </LinearLayout>
    <View
        android:id="@+id/detailviewprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible"/>
    <ProgressBar
    android:id="@+id/detailprogressbar"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_marginTop="300dp"
    android:layout_marginLeft="170dp"
    android:visibility="invisible"/>


</RelativeLayout>

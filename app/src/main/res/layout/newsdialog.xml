<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsdialog"
    android:layout_width="370dp"
    android:layout_height="450dp"
    android:background="@drawable/dialogborder"
    android:paddingBottom="20dp"
    android:layout_marginLeft="20dp"
    android:gravity="center"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/newsdialogsource"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-20dp"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/newsdialogdate"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#808080"/>
    <View
        android:id="@+id/newsdialogshadowview"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="#CCD3D3D3" />

    <TextView
        android:id="@+id/newsdialogheadline"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/newsdialogsummary"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/newsdialogchrome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-130dp"
        android:src="@drawable/chrome"
        android:background="@color/white"
        />

    <ImageButton
        android:id="@+id/newsdialogtwitter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-71dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/twitter_x_icon"
        android:background="@color/white"
       />
    <ImageButton
        android:id="@+id/newsdialogfacebook"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-71dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/facebook"
        android:background="@color/white"
        />


    
    
</LinearLayout>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/portfolio"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/portfoliodatalayout"
    android:orientation="vertical"
    >

<TextView
    android:id="@+id/portfolioticker"
    android:layout_width="130dp"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:textStyle="bold"
    android:textSize="22sp"/>

    <TextView
        android:id="@+id/portfolioshare"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#808080"/>

    <TextView
        android:id="@+id/portfoliocp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-90dp"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/portfoliochange"
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/portfoliotrendingabove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trending_up"
        android:background="@color/white"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-30dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/portfoliotrendingdown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trending_down"
        android:background="@color/white"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-30dp"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/portfoliorightarrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/right_arrow"
        android:layout_marginLeft="360dp"
        android:background="@color/white"
        android:layout_marginTop="-80dp"/>


</GridLayout>